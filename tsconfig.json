{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "public"
    ]
}